# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=moneyy
DB_USER=postgres
DB_PASSWORD=your_secure_production_password_here

# Encryption (IMPORTANT: Generate a secure 32-byte base64 encoded key)
# Generate with: openssl rand -base64 32
ENC_MASTER_KEY=your_production_encryption_key_here

# Server Configuration
API_PORT=4000
FRONTEND_PORT=80
LOG_LEVEL=info

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Docker Image Version (use specific version tags in production)
VERSION=latest
